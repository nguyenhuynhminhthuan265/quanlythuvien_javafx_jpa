<?xml version="1.0" encoding="UTF-8"?>

<?import com.quanlythuvien.entity.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="700.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.quanlythuvien.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="Exit" />
                    </items>
                </Menu>

                <Menu text="Help">
                    <items>
                        <MenuItem text="About..." />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <TabPane prefHeight="600.0" prefWidth="740.0" rotateGraphic="true" tabClosingPolicy="UNAVAILABLE">
            <Tab text=" Sách ">
                <AnchorPane>
                    <ButtonBar buttonMinWidth="50.0" maxWidth="Infinity" prefHeight="40.0" AnchorPane.rightAnchor="160.0" AnchorPane.topAnchor="5.0">
                        <buttons>
                            <Button fx:id="btnSearchBook" onAction="#addSomeBooksToTableView" prefHeight="26.0" text="Tìm" />
                            <Button fx:id="btnAddBook" onAction="#addNewBook" prefHeight="26.0" text="Thêm" />
                            <Button fx:id="btnEditBook" prefHeight="26.0" text="Sửa" />
                            <Button fx:id="btnDeleteBook" prefHeight="26.0" text="Xóa" />
                        </buttons>
                    </ButtonBar>
                    <Button fx:id="btnRefreshBooks" prefHeight="26.0" prefWidth="142.0" text="Làm mới danh sách" AnchorPane.rightAnchor="9.0" AnchorPane.topAnchor="12.0" />

                    <TextField fx:id="txtfldSearchBook" prefHeight="28.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="404.0" AnchorPane.topAnchor="12.0" />
                    <TableView fx:id="tableViewBooks" editable="true" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="50.0">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                        <columns>
                            <TableColumn text="Mã Sách">
                                <cellValueFactory><PropertyValueFactory property="id" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Tên Sách">
                                <cellValueFactory><PropertyValueFactory property="name" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Thể loại">
                                <cellValueFactory><PropertyValueFactory property="category" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Tác giả">
                                <cellValueFactory><PropertyValueFactory property="author" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="NXB">
                                <cellValueFactory><PropertyValueFactory property="publisher" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="Năm XB">
                                <cellValueFactory><PropertyValueFactory property="yearPublished" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn text="ISBN">
                                <cellValueFactory><PropertyValueFactory property="ISBN" />
                                </cellValueFactory>
                            </TableColumn>
                        </columns>

                    </TableView>
                </AnchorPane>
            </Tab>
        </TabPane>
    </center>


</BorderPane>
